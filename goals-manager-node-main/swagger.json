{
    "openapi": "3.0.3",
    "info": {
        "title": "Goals Manager",
        "version": "1.0.0"
    },
    "components": {
        "schemas": {}
    },
    "paths": {
        "/goals": {
            "post": {
                "operationId": "createGoal",
                "tags": [
                    "goals"
                ],
                "description": "Create a goal",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "title": {
                                        "type": "string"
                                    },
                                    "desiredWeeklyFrequency": {
                                        "type": "integer",
                                        "minimum": 1,
                                        "maximum": 7
                                    }
                                },
                                "required": [
                                    "title",
                                    "desiredWeeklyFrequency"
                                ],
                                "additionalProperties": false
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "201": {
                        "description": "Default Response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "enum": [
                                        "null"
                                    ],
                                    "nullable": true
                                }
                            }
                        }
                    }
                }
            }
        },
        "/completions": {
            "post": {
                "operationId": "createGoalCompletion",
                "tags": [
                    "goals"
                ],
                "description": "complete a Goal",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "goalId": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "goalId"
                                ],
                                "additionalProperties": false
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "Default Response"
                    }
                }
            }
        },
        "/summary": {
            "get": {
                "operationId": "getWeekSummary",
                "tags": [
                    "goals"
                ],
                "description": "Daily Chart",
                "responses": {
                    "200": {
                        "description": "Default Response"
                    }
                }
            }
        },
        "/pending-goals": {
            "get": {
                "operationId": "getWeekPendingGoals",
                "tags": [
                    "goals"
                ],
                "description": "Daily Chart",
                "responses": {
                    "200": {
                        "description": "Default Response"
                    }
                }
            }
        },
        "/daily-goals-chart": {
            "get": {
                "operationId": "getDailyGoalsChart",
                "tags": [
                    "goals"
                ],
                "description": "Daily Chart",
                "responses": {
                    "200": {
                        "description": "Default Response"
                    }
                }
            }
        },
        "/goals/{id}": {
            "delete": {
                "operationId": "deleteGoal",
                "tags": [
                    "goals"
                ],
                "description": "Daily Chart",
                "parameters": [
                    {
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        },
                        "in": "path",
                        "name": "id",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Default Response"
                    }
                }
            }
        },
        "/auth/github": {
            "post": {
                "operationId": "authenticateFromGithub",
                "tags": [
                    "auth"
                ],
                "description": "Authenticate user from Github code",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "code": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "code"
                                ],
                                "additionalProperties": false
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "201": {
                        "description": "Default Response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "token": {
                                            "type": "string"
                                        }
                                    },
                                    "required": [
                                        "token"
                                    ],
                                    "additionalProperties": false
                                }
                            }
                        }
                    }
                }
            }
        },
        "/profile": {
            "get": {
                "operationId": "getProfile",
                "tags": [
                    "auth"
                ],
                "description": "Get authenticated user profile",
                "responses": {
                    "200": {
                        "description": "Default Response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "profile": {
                                            "type": "object",
                                            "properties": {
                                                "id": {
                                                    "type": "string"
                                                },
                                                "name": {
                                                    "type": "string",
                                                    "nullable": true
                                                },
                                                "email": {
                                                    "type": "string",
                                                    "nullable": true
                                                },
                                                "avatarUrl": {
                                                    "type": "string",
                                                    "format": "uri"
                                                }
                                            },
                                            "required": [
                                                "id",
                                                "name",
                                                "email",
                                                "avatarUrl"
                                            ],
                                            "additionalProperties": false
                                        }
                                    },
                                    "required": [
                                        "profile"
                                    ],
                                    "additionalProperties": false
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}